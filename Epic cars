        // DOM Elements
        const vehiclesGrid = document.getElementById('vehiclesGrid');
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notificationText');

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            renderVehicles();
            setupEventListeners();
            startCountdowns();
        });

        // Render vehicles to the grid
        function renderVehicles() {
            vehiclesGrid.innerHTML = '';
            
            vehicles.forEach(vehicle => {
                const timeLeft = Math.max(0, vehicle.endTime - Date.now());
                const hoursLeft = Math.floor(timeLeft / (1000 * 60 * 60));
                const minutesLeft = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                
                const vehicleElement = document.createElement('div');
                vehicleElement.className = 'card';
                vehicleElement.innerHTML = `
                    <img src="${vehicle.image}" class="card-img" alt="${vehicle.title}">
                    <div class="card-content">
                        <h3 class="card-title">${vehicle.title}</h3>
                        <div class="card-source">
                            <i class="${vehicle.sourceIcon}"></i>
                            Source: ${vehicle.source}
                        </div>
                        <div class="card-details">
                            <span class="card-detail"><i class="fas fa-calendar-alt"></i> ${vehicle.year}</span>
                            <span class="card-detail"><i class="fas fa-tachometer-alt"></i> ${vehicle.mileage.toLocaleString()} miles</span>
                        </div>
                        <div class="card-price">$${vehicle.price.toLocaleString()}</div>
                        <p>${vehicle.description}</p>
                        <div class="countdown" data-end="${vehicle.endTime}">
                            <i class="fas fa-clock"></i>
                            Auction ends in: ${hoursLeft}h ${minutesLeft}m
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary view-details-btn" data-id="${vehicle.id}">
                                <i class="fas fa-eye"></i>
                                View Details
                            </button>
                            <button class="btn btn-secondary place-bid-btn" data-id="${vehicle.id}">
                                <i class="fas fa-gavel"></i>
                                Place Bid
                            </button>
                        </div>
                    </div>
                `;
                
                vehiclesGrid.appendChild(vehicleElement);
            });
        }

        // Setup all event listeners
        function setupEventListeners() {
            // Navigation buttons
            document.getElementById('loginBtn').addEventListener('click', handleLogin);
            document.getElementById('myBidsBtn').addEventListener('click', handleMyBids);
            document.getElementById('sellVehicleBtn').addEventListener('click', handleSellVehicle);
            
            // Search button
            document.getElementById('searchBtn').addEventListener('click', handleSearch);
            
            // Compare button
            document.getElementById('compareBtn').addEventListener('click', handleCompare);
            
            // Tabs
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    filterContent(this.getAttribute('data-tab'));
                });
            });
            
            // Platform cards
            const platformCards = document.querySelectorAll('.platform-card');
            const platformModal = document.getElementById('platformModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalContent = document.getElementById('modalContent');
            const closeModal = document.querySelectorAll('.close-modal');
            
            platformCards.forEach(card => {
                card.addEventListener('click', function() {
                    const platformId = this.getAttribute('data-platform');
                    const platform = platforms[platformId];
                    
                    modalTitle.textContent = platform.name;
                    modalContent.innerHTML = `
                        <p><strong>Description:</strong> ${platform.description}</p>
                        <p><strong>Website:</strong> <a href="${platform.website}" target="_blank">${platform.website}</a></p>
                        <p><strong>Available Countries:</strong> ${platform.countries.join(', ')}</p>
                        <p><strong>Vehicle Types:</strong> ${platform.vehicles}</p>
                        <button class="btn btn-primary" style="margin-top: 20px;" onclick="window.open('${platform.website}', '_blank')">
                            <i class="fas fa-external-link-alt"></i>
                            Visit ${platform.name}
                        </button>
                    `;
                    
                    platformModal.style.display = 'flex';
                });
            });
            
            // Close modals
            closeModal.forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.modal').forEach(modal => {
                        modal.style.display = 'none';
                    });
                });
            });
            
            // Close modal when clicking outside
            window.addEventListener('click', function(event) {
                if (event.target.classList.contains('modal')) {
                    event.target.style.display = 'none';
                }
            });
            
            // View details and place bid buttons (delegated event handling)
            vehiclesGrid.addEventListener('click', function(e) {
                if (e.target.classList.contains('view-details-btn') || e.target.closest('.view-details-btn')) {
                    const btn = e.target.classList.contains('view-details-btn') ? e.target : e.target.closest('.view-details-btn');
                    const vehicleId = btn.getAttribute('data-id');
                    viewVehicleDetails(vehicleId);
                }
                
                if (e.target.classList.contains('place-bid-btn') || e.target.closest('.place-bid-btn')) {
                    const btn = e.target.classList.contains('place-bid-btn') ? e.target : e.target.closest('.place-bid-btn');
                    const vehicleId = btn.getAttribute('data-id');
                    placeBid(vehicleId);
                }
            });
            
            // Submit bid button
            document.getElementById('submitBidBtn').addEventListener('click', handleBidSubmission);
        }

        // Start countdown timers
        function startCountdowns() {
            setInterval(() => {
                const countdowns = document.querySelectorAll('.countdown');
                countdowns.forEach(countdown => {
                    const endTime = parseInt(countdown.getAttribute('data-end'));
                    const timeLeft = Math.max(0, endTime - Date.now());
                    const hoursLeft = Math.floor(timeLeft / (1000 * 60 * 60));
                    const minutesLeft = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                    
                    countdown.innerHTML = `<i class="fas fa-clock"></i> Auction ends in: ${hoursLeft}h ${minutesLeft}m`;
                });
            }, 60000); // Update every minute
        }

        // Handle login
        function handleLogin() {
            if (!currentUser) {
                currentUser = {
                    name: "Demo User",
                    email: "demo@epixcars.com"
                };
                showNotification("Successfully logged in as Demo User");
            } else {
                currentUser = null;
                showNotification("Successfully logged out");
            }
            
            updateUI();
        }

        // Handle my bids
        function handleMyBids() {
            if (!currentUser) {
                showNotification("Please log in to view your bids", "error");
                return;
            }
            
            if (userBids.length === 0) {
                showNotification("You haven't placed any bids yet");
            } else {
                showNotification(`You have ${userBids.length} active bids`);
            }
        }

        // Handle sell vehicle
        function handleSellVehicle() {
            if (!currentUser) {
                showNotification("Please log in to sell a vehicle", "error");
                return;
            }
            
            showNotification("Sell vehicle form would open here");
        }

        // Handle search
        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value;
            const location = document.getElementById('locationInput').value;
            
            if (!searchTerm) {
                showNotification("Please enter a search term", "error");
                return;
            }
            
            showNotification(`Searching for "${searchTerm}"${location ? ` in ${location}` : ''}`);
        }

        // Handle compare
        function handleCompare() {
            const vehicle = document.getElementById('compareVehicle').value;
            const country = document.getElementById('compareCountry').value;
            
            if (vehicle === "Select Vehicle" || country === "Select Country") {
                showNotification("Please select both a vehicle and a country", "error");
                return;
            }
            
            // Update comparison values based on country
            const marketPriceElement = document.querySelector('.price-market');
            const savingsElement = document.querySelector('.price-savings');
            
            // Simulate different prices based on country
            const priceMap = {
                'United States': 34000,
                'Germany': 32500,
                'Japan': 31000,
                'United Arab Emirates': 31500,
                'United Kingdom': 33200
            };
            
            if (priceMap[country]) {
                const marketPrice = priceMap[country];
                const savings = 35000 - marketPrice;
                
                marketPriceElement.textContent = '$' + marketPrice.toLocaleString();
                savingsElement.textContent = '$' + savings.toLocaleString();
                
                showNotification(`Price comparison updated for ${country}`);
            }
        }

        // Filter content based on selected tab
        function filterContent(tab) {
            showNotification(`Showing content for: ${tab}`);
            // In a real application, this would filter the displayed content
        }

        // View vehicle details
        function viewVehicleDetails(vehicleId) {
            const vehicle = vehicles.find(v => v.id == vehicleId);
            if (vehicle) {
                showNotification(`Viewing details for: ${vehicle.title}`);
                // In a real application, this would open a detailed view
            }
        }

        // Place a bid
        function placeBid(vehicleId) {
            if (!currentUser) {
                showNotification("Please log in to place a bid", "error");
                return;
            }
            
            const vehicle = vehicles.find(v => v.id == vehicleId);
            if (vehicle) {
                const bidModal = document.getElementById('bidModal');
                const bidModalTitle = document.getElementById('bidModalTitle');
                const bidVehicleName = document.getElementById('bidVehicleName');
                const currentBidAmount = document.getElementById('currentBidAmount');
                
                bidModalTitle.textContent = `Place Bid on ${vehicle.title}`;
                bidVehicleName.textContent = vehicle.title;
                currentBidAmount.textContent = `$${vehicle.price.toLocaleString()}`;
                
                // Show loading spinner briefly
                document.getElementById('bidSpinner').style.display = 'block';
                document.getElementById('bidForm').style.display = 'none';
                
                bidModal.style.display = 'flex';
                
                // Simulate loading
                setTimeout(() => {
                    document.getElementById('bidSpinner').style.display = 'none';
                    document.getElementById('bidForm').style.display = 'block';
                }, 1000);
            }
        }

        // Handle bid submission
        function handleBidSubmission() {
            const bidAmount = document.getElementById('bidAmount').value;
            
            if (!bidAmount || isNaN(bidAmount) || parseFloat(bidAmount) <= 0) {
                showNotification("Please enter a valid bid amount", "error");
                return;
            }
            
            // Simulate bid processing
            document.getElementById('bidSpinner').style.display = 'block';
            document.getElementById('bidForm').style.display = 'none';
            
            setTimeout(() => {
                document.getElementById('bidModal').style.display = 'none';
                showNotification(`Bid of $${parseFloat(bidAmount).toLocaleString()} placed successfully!`);
                
                // Add to user's bids
                userBids.push({
                    vehicleId: 1, // This would be the actual vehicle ID
                    amount: parseFloat(bidAmount),
                    time: new Date()
                });
            }, 1500);
        }

        // Update UI based on user state
        function updateUI() {
            const loginBtn = document.getElementById('loginBtn');
            const myBidsBtn = document.getElementById('myBidsBtn');
            const sellVehicleBtn = document.getElementById('sellVehicleBtn');
            
            if (currentUser) {
                loginBtn.innerHTML = '<i class="fas fa-user"></i><span>Logout</span>';
                myBidsBtn.style.opacity = '1';
                sellVehicleBtn.style.opacity = '1';
            } else {
                loginBtn.innerHTML = '<i class="fas fa-user"></i><span>Login</span>';
                myBidsBtn.style.opacity = '0.7';
                sellVehicleBtn.style.opacity = '0.7';
            }
        }

        // Show notification
        function showNotification(message, type = 'success') {
            notification.style.display = 'block';
            notificationText.textContent = message;
            
            if (type === 'error') {
                notification.style.background = '#ef4444';
            } else {
                notification.style.background = '#10b981';
            }
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>
